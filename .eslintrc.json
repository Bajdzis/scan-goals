{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": [
		"eslint:recommended",
    	"plugin:react/recommended"
	],
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 10
	},
	"plugins": [
		"@typescript-eslint",
		"react"
	],
	"rules": {
		"indent": [
			"error",
			4
		],
		"linebreak-style": [
			0
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"eol-last": [
			"error",
			"always"
		]
	},
	"settings": {
		"react": {
		  "createClass": "createReactClass", 
		  "pragma": "React",  
		  "version": "16.9"
		}
	},
	"overrides": [
		{
			"files": [
				"**/*.ts"
			],
			"parser": "@typescript-eslint/parser",
			"parserOptions": {
				"project": "./tsconfig.json",
				"sourceType": "module",
				"ecmaVersion": 10
			},
			"rules": {
				"no-unused-vars": [
					"off"
				],
				"no-undef": [
					"off"
				],
				"@typescript-eslint/no-unused-vars": [
					"error"
				]
			}
		}
	]
}
